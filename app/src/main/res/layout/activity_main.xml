<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textlastcalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="589dp"
        android:textColor="#673AB7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <Button
                android:id="@+id/buttonporcentage"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#37474F"
                android:text="%"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttoninutile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37474F"
                android:text="CE"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonclear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37474F"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttondelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37474F"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonsurx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37474F"
                android:text="1/x"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttoncarre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37474F"
                android:text="x2"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonracine"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button9"
                android:layout_alignStart="@+id/button9"
                android:layout_alignLeft="@+id/button9"
                android:background="#37474F"
                android:text="âˆšx"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/buttondiv"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/buttonmul"
                android:layout_alignStart="@+id/buttonmul"
                android:layout_alignLeft="@+id/buttonmul"
                android:layout_alignEnd="@+id/buttonmul"
                android:layout_alignRight="@+id/buttonmul"
                android:background="#37474F"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/button4"
                android:layout_toLeftOf="@+id/button2"
                android:background="#263238"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button8"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button5"
                android:layout_alignStart="@+id/button5"
                android:layout_alignLeft="@+id/button5"
                android:background="#263238"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button9"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button6"
                android:layout_alignStart="@+id/button6"
                android:layout_alignLeft="@+id/button6"
                android:background="#263238"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/buttonmul"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/buttonsub"
                android:layout_alignStart="@+id/buttonsub"
                android:layout_alignLeft="@+id/buttonsub"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#37474F"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/button1"
                android:layout_toLeftOf="@+id/button2"
                android:background="#263238"
                android:text="4"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/button2"
                android:layout_alignLeft="@+id/button2"
                android:layout_alignBottom="@+id/button4"
                android:background="#263238"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button6"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button3"
                android:layout_alignStart="@+id/button3"
                android:layout_alignLeft="@+id/button3"
                android:background="#263238"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/buttonsub"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/buttonadd"
                android:layout_alignStart="@+id/buttonadd"
                android:layout_alignLeft="@+id/buttonadd"
                android:layout_alignEnd="@+id/buttonadd"
                android:layout_alignRight="@+id/buttonadd"
                android:background="#37474F"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/edt1"
                android:layout_alignEnd="@+id/button4"
                android:layout_alignRight="@+id/button4"
                android:background="#263238"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/button1"
                android:layout_toStartOf="@+id/button3"
                android:layout_toLeftOf="@+id/button3"
                android:background="#263238"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/button2"
                android:layout_centerHorizontal="true"
                android:background="#263238"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/buttonadd"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/button3"
                android:layout_alignEnd="@+id/edt1"
                android:layout_alignRight="@+id/edt1"
                android:layout_toRightOf="@+id/button3"
                android:background="#37474F"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#263238"
                android:text="+/-"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button0"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button8"
                android:layout_alignStart="@+id/button8"
                android:layout_alignLeft="@+id/button8"
                android:background="#263238"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button10"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button7"
                android:layout_toLeftOf="@+id/button2"
                android:background="#263238"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/buttoneql"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button0"
                android:layout_alignStart="@+id/button10"
                android:layout_alignLeft="@+id/button10"
                android:layout_alignEnd="@+id/buttondiv"
                android:layout_alignRight="@+id/buttondiv"
                android:background="#673AB7"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>