<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative2"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textlastcalc"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="354dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="535dp"
        android:textColor="#673AB7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="484dp"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TableLayout android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:stretchColumns="3" >

    <TableRow android:layout_width="wrap_content">

        <Button
            android:id="@+id/buttonporcentage"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#37474F"
            android:text="@string/Pourcentage"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttoninutile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#37474F"
            android:text="@string/ce"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonclear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#37474F"
            android:text="@string/c"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttondelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#37474F"
            android:text="@string/delete"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:ignore="ButtonStyle" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonsurx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#37474F"
            android:text="@string/_1_x"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttoncarre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#37474F"
            android:text="@string/x2"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonracine"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#37474F"
            android:text="@string/racine_x"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/buttondiv"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#37474F"
            android:text="@string/division"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:ignore="MissingConstraints" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

