            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
